package {	import flash.display.MovieClip;	import flash.events.MouseEvent;	import flash.geom.Point;	import flash.geom.ColorTransform;	import flash.events.Event;	public class Auge extends MovieClip	{ 				protected var originalPosition:Point;		var newCol:ColorTransform = new ColorTransform();		var startDragX:Number = 0;		var startDragY:Number = 0;				var ausgewaehlt:Boolean=false;		public function Auge()		{			originalPosition = new Point(x,y);			buttonMode = true;			addEventListener(MouseEvent.MOUSE_DOWN, down );		}		protected function down( event:MouseEvent ):void		{			parent.addChild( this );			startDragX=this.x;			startDragY=this.y;			startDrag();						stage.addEventListener( MouseEvent.MOUSE_UP, stageUp );		}		protected function stageUp(event:MouseEvent ):void		{			stage.removeEventListener(MouseEvent.MOUSE_UP, stageUp );			stopDrag();			if (dropTarget)			{				if (dropTarget.parent==(parent as Main).auswahlListe._collection[0] || dropTarget.parent==(parent as Main).auswahlListe._collection[1])				{					this.dispatchEvent(new AugenEvent(AugenEvent.ON_AUGEN_HIT,{}));					ausgewaehlt = true;				}				else				{					returnToOriginalPosition();				}			}			else			{				returnToOriginalPosition();			}		}		public function returnToOriginalPosition():void		{			ausgewaehlt = false;			this.dispatchEvent(new AugenEvent(AugenEvent.ON_AUGEN_REMOVE,{}));			//dispatchEvent(augenEvent);			x = originalPosition.x;			y = originalPosition.y;		}	}   }